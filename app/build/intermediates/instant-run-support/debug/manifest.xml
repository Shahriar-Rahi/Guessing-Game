<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kwarkbit.guessinggame"
    android:versionCode="3"
    android:versionName="1.0.2" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="25" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="com.kwarkbit.guessinggame.StartScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.kwarkbit.guessinggame.GuessingGame" />
        <activity android:name="com.kwarkbit.guessinggame.Preferences" />
        <activity
            android:name="com.kwarkbit.guessinggame.HelpDialog"
            android:label="@string/help"
            android:theme="@android:style/Theme.Dialog" />

        <service
            android:name="com.android.tools.fd.runtime.InstantRunService"
            android:exported="true" />
    </application>

</manifest>